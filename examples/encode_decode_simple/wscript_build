#! /usr/bin/env python
# encoding: utf-8

static_libs = []
dynamic_libs = []

if bld.is_mkspec_platform('windows'):
    static_libs = []
else:
    static_libs = ['stdc++']

bld.program(features = 'c',
            source   = 'encode_decode_simple.c',
            target   = 'encode_decode_simple_static',
            lib      = static_libs,
            use      = ['ckodo_static'])

bld.program(features = 'c',
            source   = 'encode_decode_simple.c',
            target   = 'encode_decode_simple_shared',            
            use      = ['ckodo_shared'])
