#! /usr/bin/env python
# encoding: utf-8

if bld.is_mkspec_platform('windows'):

    bld.program(features = 'c',
                source   = 'encode_decode_simple.c',
                target   = 'encode_decode_simple_static',
                use      = ['ckodo_static'])
else:

    bld.program(features = 'c',
                source   = 'encode_decode_simple.c',
                target   = 'encode_decode_simple_static',
                lib      = ['stdc++'],
                use      = ['ckodo_static'])

